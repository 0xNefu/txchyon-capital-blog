---
import Layout from '../layouts/Layout.astro';
import AsterPrice from '../components/AsterPrice.astro';
---

<Layout title="Txchyon Capital – Aster Perpetual Trading">
  <html lang="en">
    <head>
      <meta charset="utf-8" />
      <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
      <meta name="viewport" content="width=device-width" />
      <meta name="generator" content={Astro.generator} />
      <title>Txchyon Capital – Aster Perpetual Trading</title>
    </head>

    <body class="bg-gray-900 text-white min-h-screen">
      <main class="max-w-4xl mx-auto px-6 py-20 text-center">
        <h1 class="text-6xl md:text-8xl font-bold mb-8 bg-gradient-to-r from-cyan-400 to-purple-600 bg-clip-text text-transparent">
          Txchyon Capital
        </h1>

        <p class="text-xl text-gray-300 mb-12">
          Multi-strategy trading firm • Aster perpetuals • Real yields
        </p>

        <AsterPrice client:load />

        <p class="mt-16 text-lg text-gray-400">
          Blog coming soon — stacking $ASTER in the meantime.
        </p>
      </main>
    </body>
  </html>
</Layout>
